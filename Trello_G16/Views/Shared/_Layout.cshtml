<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")"                   rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/jquery-ui-1.9.2.custom.css")" rel="stylesheet" type="text/css"/>

    <script src="@Url.Content("~/Scripts/jquery-1.8.3.js")"                     type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.9.2.custom.js")"           type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-2.5.3.js")"                  type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/ProjectScripts/common.js")"            type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/ProjectScripts/TrelloFunctions.js")"   type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/ProjectScripts/TrelloValidations.js")" type="text/javascript"></script>
</head>
<body>
    <div class="page">
        <header>
            <div id="title">
                <h1>PI Trello</h1>
            </div>
            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
            <nav>
                <ul id="menu">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Boards", "Index", "Boards")</li>
                    @if (User.Identity.IsAuthenticated) { 
                        <li>@Html.ActionLink("Profile", "Index", "User")</li>
                        <li>@Html.ActionLink("Search","Index","Search")</li>
                        <li>@Html.ActionLink("Archived", "Archived", "Cards")</li>
                    }
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                </ul>
            </nav>
        </header>
        <section id="main">
            @RenderBody()
        </section>
        <footer>
        </footer>
    </div>
</body>
</html>
